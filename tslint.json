{
	"defaultSeverity": "error",
	"extends": [
		//"eslint:recommended",
		"tslint:recommended"
	],
	"rules": {
		"encoding": true,
		"indent": [ true, "tabs", 4 ],
		"file-name-casing": [ true, "kebab-case" ],
		"no-console": false,
		"comment-format": true, // [ true, "check-space" ]
		"whitespace": [ true, "check-branch", "check-decl", "check-operator", "check-module", "check-separator", "check-rest-spread", "check-type", "check-typecast", "check-type-operator", "check-preblock" ],
		"ordered-imports": false,
		//"ordered-imports": [true, {
		//	"import-sources-order": "any",
		//	"named-imports-order": "any",
		//	"grouped-imports": false,
		//	"module-source-path": "basename"
		//}],
		"no-require-imports": true,
		"no-duplicate-imports": [
			true,
			{ "allow-namespace-imports": true }
		],
		"no-reference": true,
		"no-reference-import": true,
		"max-classes-per-file": false, // [ true, 1 ]
		"class-name": false,
		"interface-name": [ true, "always-prefix" ],
		"interface-over-type-literal": true,
		"one-variable-per-declaration": false, // [true, "ignore-for-loop"]
		"variable-name": {
			"options": [
				"ban-keywords",
				"check-format",
				"allow-leading-underscore",
				"allow-pascal-case",
				"allow-snake-case"
				//"require-const-for-all-caps"
			]
		},
		"no-invalid-this": [ true, "check-function-in-method" ],
		"no-misused-new": true,
		"new-parens": true,
		//"no-switch-case-fall-through": true,
		"promise-function-async": true,
		"no-async-without-await": true
	}
	//"jsRules": {},
	//"rulesDirectory": []
}
