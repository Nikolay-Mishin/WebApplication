{
	"compileOnSave": true,
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "src/js",
		"lib": [ "dom", "es6" ],
		"module": "es6",
		"target": "es6",
		"moduleResolution": "classic",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"importHelpers": true,
		"noLib": false,
		"sourceMap": true,
		"emitBOM": true,
		"charset": "utf-8",
		"newLine": "crlf",
		"removeComments": false,
		"noEmitOnError": true,
		"noEmitHelpers": false,
		"allowJs": true,
		"paths": {
			"tslib": [ "./../../../node_modules/tslib/tslib.d.ts" ],
			"jquery": [ "./../../../node_modules/jquery/dist/jquery" ]
		},
		"noImplicitAny": true
	},
	"exclude": [
		"node_modules",
		"gulpfile.js",
		"wwwroot",
		"src/js"
	],
	"include": [
		"src/ts"
	]
}
